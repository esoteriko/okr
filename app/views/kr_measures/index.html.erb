<p id="notice"><%= notice %></p>

<h1>Kr Measures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kr_measures.each do |kr_measure| %>
      <tr>
        <td><%= kr_measure.name %></td>
        <td><%= link_to 'Show', kr_measure %></td>
        <td><%= link_to 'Edit', edit_kr_measure_path(kr_measure) %></td>
        <td><%= link_to 'Destroy', kr_measure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

