<style>
.customLink:link{
  background-color: none;
  color: black;
}
.customLink:hover, customLink:active {
  text-decoration: underline;
  background: none;
  color: gray;
}


</style>
<br>
<center>
<div class="container">
  <div class="card">
    <div class="card-body">
      <strong class="cart-title">Objetivos creados</strong><br><br>
      <table class="table">
      <tbody>
      <tr>
        <th scope="row">
          <strong class="card-subtitle mb-2 text-muted">Usuario:</strong>
        </th>
        <td>
          <%= @objective.user.name %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          <strong class="card-subtitle mb-2 text-muted">Descripcion:</strong>
        </th>
        <td>
          <%= @objective.description %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          <strong class="card-subtitle mb-2 text-muted">Periodo de tiempo:</strong>
        </th>
        <td>
          <%= @objective.period_value %> <%= @objective.tiempo.name%>
        </td>
      </tr>

      <tr>
        <th>
          <strong class="card-subtitle mb-2 text-muted">Key Result:</strong>
        </th>
        <td>
          <% if @objective.key_results.any? %>
          <ul class="lis-group list-group-flush">
          <% @objective.key_results.each do |result| %>
            <li class="list-group-item"><%= link_to result, result, class:"customLink" %></li> 
            <% end %>
          </ul>
          <% else %>
          <p>no hay key_results</p>
          <% end %>
        <td>
      <tr>
<th>
  <strong class="card-subtitle mb-2 text-muted">Group</strong>
</th>
<td>
<% if @objective.groups.any? %>
  <ul class="lis-group list-group-flush">
    <% @objective.groups.each do |group| %>
    <li class="list-group-item"><%= link_to group, group, class:"customLink" %></li> 
    <% end %>
  </ul>
<% else %>
  <p>no groups</p>
<% end %>

</td>
</tbody>
</table>
<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_objective_path(@objective), class:"customLink" %> |
<%= link_to 'Back', objectives_path, class:"customLink" %>
</div>
</div>
</div>
</center>
